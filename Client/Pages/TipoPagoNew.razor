@page "/tipopagos/crear"
@using RestauranteApp.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager

<div class="container mr-5 ml-5">
    <h3>Tipo de Pagos</h3>
    <hr />
    <TipoPagoEditPage TipoPago="TipoPago" OnGrabar="Grabar"></TipoPagoEditPage>
</div>



@code {
    public TipoPagoDto TipoPago { get; set; } = new TipoPagoDto();
    private async Task Grabar()
    {
        await Http.PostAsJsonAsync("api/tipopagos", TipoPago);
        NavigationManager.NavigateTo("/tipopagos/list");
    }

}
