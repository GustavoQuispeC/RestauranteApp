@page "/proveedores/list"
@using RestauranteApp.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager


<h3>Proveedor</h3>
<hr />
<a href="proveedores/crear" class="btn btn-success" >Nuevo <Icon Name="IconName.PersonAdd" /></a>
<br />
<br />


@if(_proveedor == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table table-hover table-bordered table-striped" >
        <thead class="color-font">
            <tr>
                <th>Id:</th>
                <th>Razón Social:</th>
                <th>Nombres:</th>
                <th>Apellidos:</th>
                <th>Teléfono:</th>
                <th>Correo:</th>
                <th>Observacion:</th>
                <th>Fecha registro:</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in _proveedor)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.RazonSocial</td>
                    <td>@item.Nombres</td>
                    <td>@item.Apellidos</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td>@item.Observacion</td>
                    <td>@item.FechaCreacion</td>
                    <td>
                        <Button Class="colorEditar" @onclick="()=>Editar(item.Id)"><Icon Name="IconName.PenFill" /></Button>
                        <Button Class="colorEliminar" @onclick="()=>Eliminar(item.Id)"><Icon Name="IconName.TrashFill" /></Button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
}



@code {
    private ProveedorDto[]? _proveedor;
    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }
    private async Task  Cargar()
    {
        _proveedor = await Http.GetFromJsonAsync<ProveedorDto[]>("api/proveedores");
        
    }
    private void Editar(int id)
    {
        NavigationManager.NavigateTo($"proveedores/editar/{id}");
    }
    private async void Eliminar(int id)
    {
        await Http.DeleteAsync($"api/proveedores/{id}");
        await Cargar();
    }
}
