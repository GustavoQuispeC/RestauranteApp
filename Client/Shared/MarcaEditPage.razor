@using RestauranteApp.Shared


    

    <EditForm Model="Marca" OnSubmit="Grabar">
        <div class="row row-cols-1 row-cols-md-2">
            <div class="col>">
                <div class="mb-3 row">
                    <label class="form-label" form="Nombre">Descripción:</label>
                    <input type="text" id="Nombre" class="form-control" @bind-value="Marca.Nombre" />
                </div>
                <div class="mb-3 row">
                    <label class="form-label" form="Observacion">Observación:</label>
                    <input type="text" id="Observacion" class="form-control" @bind-value="Marca.Observacion" />
                </div>
            </div>

        </div>
        <div class="row row-cols-1">
        <Button Type="ButtonType.Submit" Class="btn btn-success w-25">Grabar <Icon Name="IconName.CheckCircle" /></Button>
        </div>

    </EditForm>


    @code {
    [Parameter]
    public MarcaDto Marca { get; set; } = new MarcaDto();
    [Parameter]
    public EventCallback OnGrabar { get; set; }
    private void Grabar()
    {
        OnGrabar.InvokeAsync();
    }
    }


